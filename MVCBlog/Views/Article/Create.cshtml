@model MVCBlog.Models.Article
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { @class = "form-horizontal"}))
        {
            
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4"})
                    
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control"})
                </div>               
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })

                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "5"})
                </div>
            </div>

               <div class="form-group">
                   <div class="col-sm-offset-4 col-sm-4">
                       <input type="submit" value="Create" class="btn btn-default"/>
                   </div>
               </div>
            
        }
    </div>
</div>


